<% diaries.each do |diary| %>
  <div class="diary-contents">
    <div class="row">
      <div class="col-2">
        <%= attachment_image_tag diary.pet, :image, size: '60x60', fallback: "no_image.png" %>
      </div>
      <div class="col-10">
        <div class="row">
          <%= diary.pet.name %>
          <div class="diary-body">
            <%= attachment_image_tag diary, :image, size: '230x230' %><br />
            <%= diary.body %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-2 offset-6">
        <%= link_to "#" do %>
          <i class="far fa-comment-alt"></i>
        <% end %>
      </div>
      <div class="col-2">
        <%= link_to  "#"  do %>
          <i class="far fa-heart"></i>
        <% end %>
      </div>
      <% if diary.pet == current_owner.pet %>
        <div class="col-2">
          <%= link_to diary_path(diary), method: :delete, data: {confirm: "削除しますか？"} do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      <% end %>
    </div>

    <!--コメント一覧-->
    <div class="row">
      <div class="col-10 offset-2">
        <% diary.diary_comments.each do |dc| %>
          <div class="row mt-2 mb-3">
            <div class="col-2">
              <%= attachment_image_tag dc.pet, :image, size: '40x40', fallback: "no_image.png" %>
            </div>
            <div class="col-10">
              <%= dc.pet.name %>
              <div class="row">
                <div class="col-10 mt-2 ml-3">
                  <%= dc.comment %>
                </div>
                <% if dc.pet == current_owner.pet %>
                  <div class="col-1 mt-2">
                    <%= link_to diary_comment_path(dc), method: :delete do %>
                      <i class="far fa-trash-alt"></i>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>

          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-10 offset-2">
        <%= form_with model: @diary_comment, url: diary_comments_path(pet_id: current_owner.pet, diary_id: diary),local: true do |f| %>
          <%= f.text_area :comment, size: '50x2', placeholder: 'コメントを書く' %>
          <%= f.submit 'コメントする', class:"btn" %>
        <% end %>
      </div>
    </div>

  </div>
<% end %>