<div class="container">
  <div class="row">
    <h2>プロフィール編集</h2>
  </div>
  <%= form_with model: current_owner, url: pet_path(@pet) ,local: true do |f| %>
    <div class="row">
      <div class="col-4">
        <h4>あなた</h4>
        <div class="field">
          <%= f.label :写真 %><br />
          <%= attachment_image_tag current_owner, :image, size: "180x180", fallback: "no_image.png", class:"owner_prev" %>
          <%= f.attachment_field :image, class:"owner_img_btn" %>
        </div>
        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
      </div>
      <%= f.fields_for :pet, @pet do |pet| %>
        <div class="col-8">
          <div class="row">
            <h4>ペット</h4>
          </div>
          <div class="row">
            <div class="col-6">
              <%= attachment_image_tag @pet, :image, size: '180x180', fallback: "no_image.png", class:"pet_prev" %>
              <%= pet.attachment_field :image %>
            </div>
            <div class="col-6">
              <div class="row">
                <%= pet.label :名前 %><br />
                <%= pet.text_field :name %>
              </div>
              <div class="row">
                <%= pet.label :紹介文 %><br />
                <%= pet.text_area :introduction %>
              </div>

            </div>
          </div>
          <div class="row">
            <%= pet.label :性格 %><br />
            <% PetPersonality.personalities.map do |k, v| %>
              <%= pet.fields_for :pet_personality,@pet_personalities do |pp| %>
                <%= pp.check_box :personality, {}, k, false %>
                <%= pp.label :personality, k %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <%= f.submit "更新する" %>
  <% end %>
</div>